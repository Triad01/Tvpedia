<% layout('/layouts/boilerplate') -%>
      <div class="row mt-3">
        <div class="col">
          <img
            src="<%=movieResult.image.original%> "
            class="card-img-top img-fluid"
            alt="..."
          />
        </div>
        <div class="col card" style="width: 10rem;">
          <div class="card-body">
            <h5 class="card-title"><%=movieResult.name%></h5>
            <p class="card-text"><%- movieResult.summary%></p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Genre: <%=movieResult.genres%></li>
              <li class="list-group-item">
                Language: <%=movieResult.language%>
              </li>
              <li class="list-group-item">
                Run time: <%=movieResult.averageRuntime%>
              </li>
              <li class="list-group-item">Status: <%=movieResult.status%></li>
              <li class="list-group-item">
                Date Ended: <%=movieResult.ended%>
              </li>
              <li class="list-group-item">
                Rating: <%=movieResult.rating.average%>
              </li>
            </ul>
            <div class="my-5">
              <a class="btn btn-primary" href="/search">Back to home</a>
            </div>
          </div>
        </div>
      </div>
</html>
